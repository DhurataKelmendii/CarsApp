@using Cars.Infrastructure.ViewModels
@model Cars.Infrastructure.ViewModels.CarViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="card">
        <!-- Header -->
        <div class="card-header">
            <h4 class="card-header-title" id="carTitle">Update Car</h4>
        </div>
        <input type="hidden" id="Id">

        <!-- End Header -->
        <!-- Body -->
        <form method="post" asp-action="Update" asp-controller="Car">
            <input type="hidden" asp-for="Id">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="SKULabel" class="input-label">Car Name</label>
                            <input type="text" class="form-control" asp-for="Name" name="Name" id="SKULabel" placeholder="Name" aria-label="eg. 348121032">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <!-- End Form Group -->
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Brand</label>
                            <input type="text" class="form-control" asp-for="Brand" name="Brand" id="SKULabel" placeholder="Brand" aria-label="eg. 348121032">
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <!-- Form Group -->
                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Year of production</label>
                            <input type="number" class="form-control" asp-for="YearOfProduction" name="YearOfProduction" id="SKULabel" placeholder="YearOfProduction" aria-label="eg. 348121032">
                            <span asp-validation-for="YearOfProduction" class="text-danger"></span>
                        </div>
                        <!-- End Form Group -->
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Price </label>
                            <input type="number" class="form-control" asp-for="Price" name="Price" id="SKULabel" placeholder="Price" aria-label="eg. 348121032">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="weightLabel" class="input-label">NumberOfSeats </label>
                            <input type="number" class="form-control" asp-for="NumberOfSeats" name="NumberOfSeats" id="SKULabel" placeholder="NumberOfSeats" aria-label="eg. 348121032">
                            <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Engine Type</label>
                            <input type="text" class="form-control" asp-for="EngineType" name="EngineType" id="SKULabel" placeholder="EngineType" aria-label="eg. 348121032">
                            <span asp-validation-for="EngineType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Fuel Type</label>
                            <input type="text" class="form-control" asp-for="FuelType" name="FuelType" id="SKULabel" placeholder="FuelType" aria-label="eg. 348121032">
                            <span asp-validation-for="FuelType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Chassis Number</label>
                            <input type="text" class="form-control" asp-for="ChassisNumber" name="ChassisNumber" id="SKULabel" placeholder="ChassisNumber" aria-label="eg. 348121032">
                            <span asp-validation-for="ChassisNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Color</label>
                            <input type="text" class="form-control" asp-for="Color" name="Color" id="SKULabel" placeholder="Color" aria-label="eg. 348121032">
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 mt-5" style="text-align: end; padding-top: 40px">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
