@model Cars.Infrastructure.ViewModels.CarViewModel
@using Cars.Infrastructure.ViewModels
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Manage <b>Cars</b></h2>
                        </div>
                        <div class="col-sm-6">
                            <a href="#addCarModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Car</span></a>
                       
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Year of producation</th>
                            <th>Price</th>
                            <th>Number of seats</th>
                            <th>Engine type</th>
                            <th>Fuel type</th>
                            <th>Chasis Number</th>
                            <th>Color</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Cars)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Brand</td>
                                <td>@item.YearOfProduction</td>
                                <td>@item.Price</td>
                                <td>@item.NumberOfSeats</td>
                                <td>@item.EngineType</td>
                                <td>@item.FuelType</td>
                                <td>@item.ChassisNumber</td>
                                <td>@item.Color</td>
                                <td>
                                    <a  asp-controller="Car" asp-action="Update" asp-route-id="@item.Id"><i class="material-icons">&#xE254;</i></a>
                                    <a asp-controller="Car" asp-action="Delete" asp-route-id="@item.Id"><i class="material-icons">&#xE872;</i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Add Modal HTML -->
    <div id="addCarModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Create" asp-controller="Car" method="post">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Car</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="SKULabel" class="input-label">Car Name</label>
                            <input type="text" class="form-control" asp-for="Name" name="Name" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Brand</label>
                            <input type="text" class="form-control" asp-for="Brand" name="Brand" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Year of production</label>
                            <input type="number" class="form-control" asp-for="YearOfProduction" name="YearOfProduction" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="YearOfProduction" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Price </label>
                            <input type="number" class="form-control" asp-for="Price" name="Price" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="weightLabel" class="input-label">NumberOfSeats </label>
                            <input type="number" class="form-control" asp-for="NumberOfSeats" name="NumberOfSeats" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Engine Type</label>
                            <input type="text" class="form-control" asp-for="EngineType" name="EngineType" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="EngineType" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Fuel Type</label>
                            <input type="text" class="form-control" asp-for="FuelType" name="FuelType" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="FuelType" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Chassis Number</label>
                            <input type="text" class="form-control" asp-for="ChassisNumber" name="ChassisNumber" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="ChassisNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Color</label>
                            <input type="text" class="form-control" asp-for="Color" name="Color" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</body>
</html>