@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>


</head>
<body>
   
    <div class="topnav" id="myTopnav">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index"></a>
        <a class="navbar-brand" asp-controller="Car" asp-action="CarsList">Cars</a>
        <a class="navbar-brand" asp-controller="Garage" asp-action="GaragesList">Garages</a>
        <a class="navbar-brand" asp-controller="User" asp-action="CarsGarageList"> Cars to Garage List</a>
        <a class="navbar-brand" asp-controller="User" asp-action="UserCarsList"> User Cars List</a>
        <a class="navbar-brand" asp-controller="User" asp-action="AddCarForUser"> Add Car for User</a>
        <a class="navbar-brand" asp-controller="User" asp-action="AddCarToGarage"> Add Car to Garage</a>
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i>
        </a>
    </div>

</body>
</html>

<script>
    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    }
</script>