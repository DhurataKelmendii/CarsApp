@model Cars.Infrastructure.ViewModels.GarageViewModel
@using Cars.Infrastructure.ViewModels
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Manage <b>Garage</b></h2>
                        </div>
                        <div class="col-sm-6">
                            <a href="#addGarageModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Garage</span></a>
                           
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                           
                            <th>Name</th>
                            <th>Capacity of cars</th>
                            <th>Country</th>
                            <th>City</th>
                            <th>Street</th>
                            <th>Price per day</th>
                            <th>Car using</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Garages)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.CapacityOfCars</td>
                                <td>@item.Country</td>
                                <td>@item.City</td>
                                <td>@item.Street</td>
                                <td>@item.PricePerDay</td>
                                <td>@item.CarsUsing</td>
                                <td>
                                    <a asp-controller="Garage" asp-action="Update" asp-route-id="@item.Id"><i class="material-icons">&#xE254;</i></a>
                                    <a asp-controller="Garage" asp-action="Delete" asp-route-id="@item.Id"><i class="material-icons">&#xE872;</i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="addGarageModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Create" asp-controller="Garage" method="post">
                    <div class="modal-header">
                        <h4 class="modal-title">Add New Garage</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="SKULabel" class="input-label">Name</label>
                            <input type="text" class="form-control" asp-for="Name" name="Name" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="weightLabel" class="input-label">Capacity of cars</label>
                            <input type="number" class="form-control" asp-for="CapacityOfCars" name="CapacityOfCars" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="CapacityOfCars" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label for="SKULabel" class="input-label">Country</label>
                            <input type="text" class="form-control" asp-for="Country" name="Country" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="SKULabel" class="input-label">City</label>
                            <input type="text" class="form-control" asp-for="City" name="City" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="SKULabel" class="input-label">Street</label>
                            <input type="text" class="form-control" asp-for="Street" name="Street" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="SKULabel" class="input-label">Price per day</label>
                            <input type="number" class="form-control" asp-for="PricePerDay" name="PricePerDay" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="PricePerDay" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="SKULabel" class="input-label">Cars Using </label>
                            <input type="number" class="form-control" asp-for="CarsUsing" name="CarsUsing" id="SKULabel" aria-label="eg. 348121032">
                            <span asp-validation-for="CarsUsing" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
 
   
</body>
</html>