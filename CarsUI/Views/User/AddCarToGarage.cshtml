@model Cars.Infrastructure.ViewModels.CarGarageViewModel
@using Cars.Infrastructure.ViewModels
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

</head>

<body>
    <div class="container-xl">
        <div class="table-responsive">
            <tr class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Add <b>Car to Garage</b></h2>
                        </div>
                        <div class="col-sm-6">

                        </div>

                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>

                    </thead>

                    <tbody>


                        @foreach (var car in Model.CarList)
                        {
                            <form asp-action="AddCarToGarage" asp-controller="User" method="post">
                                <input type="hidden" asp-for="Id" name="Id">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p>@car.Name</p>
                                    </div>

                                    <div class="col-md-6">
                                        <select asp-for="GarageId" name="GarageId" id="GarageId">
                                            <option value="0" selected>Choose a Garage</option>

                                            @foreach (var item in Model.GarageList)
                                            {
                                                <option name="GarageId" value="@item.Id">@item.Name</option>

                                            }
                                        </select>
                                        <input type="number" style="display:none;" asp-for="CarId" name="CarId" value="@car.Id" />
                                        <input type="submit" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>
                        }

                    </tbody>
                </table>
            </tr>
        </div>
    </div>
</body>
</html>